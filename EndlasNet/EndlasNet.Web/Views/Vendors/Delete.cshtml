@model EndlasNet.Data.Vendor

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h4 class="alert alert-dark">Deleting this vendor will also delete any inventory that references this vendor.</h4>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Vendor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Vendor name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VendorName)
        </dd>
        <dt class = "col-sm-2">
            Point of contact
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PointOfContact)
        </dd>
        <dt class = "col-sm-2">
            Vendor address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VendorAddress)
        </dd>
        <dt class = "col-sm-2">
            Vendor phone
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VendorPhone)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VendorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to list</a>
    </form>
</div>
