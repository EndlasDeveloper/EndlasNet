@model EndlasNet.Data.Vendor

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h4 class="alert alert-dark">Deleting this vendor will also delete any inventory that references this vendor.</h4>
<h3>Are you sure you want to delete this?</h3>
<div>
    <div>
        @await Html.PartialAsync("_DetailsAndDelete", Model)
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VendorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to list</a>
    </form>
</div>
