
@model IEnumerable<EndlasNet.Data.Admin>

@{
    ViewData["Title"] = "Admins";
}
<h1>Admins</h1>

<p>
    <a asp-action="Create">Create new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <div>
                    First name
                </div>
                <span>
                    @Html.ActionLink("Asc ", "Index", new { sortOrder = ViewBag.FirstNameAscSortParm }, new { @style = "font-size:small;color:firebrick;" })
                    @Html.ActionLink(" Desc", "Index", new { sortOrder = ViewBag.FirstNameDescSortParm }, new { @style = "font-size:small;color:firebrick;" })
                </span>
            </th>
            <th>
                <div>
                    Last name
                </div>
                <span>
                    @Html.ActionLink("Asc ", "Index", new { sortOrder = ViewBag.LastNameAscSortParm }, new { @style = "font-size:small;color:firebrick;" })
                    @Html.ActionLink(" Desc", "Index", new { sortOrder = ViewBag.LastNameDescSortParm }, new { @style = "font-size:small;color:firebrick;" })
                </span>
            </th>
            <th>
                <div>
                    Endlas email
                </div>
                <span>
                    @Html.ActionLink("Asc ", "Index", new { sortOrder = ViewBag.EmailAscSortParm }, new { @style = "font-size:small;color:firebrick;" })
                    @Html.ActionLink(" Desc", "Index", new { sortOrder = ViewBag.EmailDescSortParm }, new { @style = "font-size:small;color:firebrick;" })
                </span>

            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndlasEmail)

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
