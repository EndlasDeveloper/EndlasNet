@using Microsoft.AspNetCore.Http

@model EndlasNet.Data.Insert

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
@if (Context.Session.GetString("userId") != null)
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Insert</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Vendor description
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VendorDescription)
            </dd>
            <dt class="col-sm-2">
                Tool tip radius (in)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ToolTipRadius)
            </dd>
            <dt class="col-sm-2">
                Insert count
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ToolCount)
            </dd>
            <dt class="col-sm-2">
                Purchase order number
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PurchaseOrderNum)
            </dd>
            <dt class="col-sm-2">
                Purchase order date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PurchaseOrderDate)
            </dd>
            <dt class="col-sm-2">
                Purchase order price
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PurchaseOrderPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.EndlasEmail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Vendor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Vendor.VendorName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MachiningToolId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
}
else
{
    <div>
        Please
        <a asp-area="" asp-controller="Login" asp-action="Index">
            Login
        </a>
    </div>
}
