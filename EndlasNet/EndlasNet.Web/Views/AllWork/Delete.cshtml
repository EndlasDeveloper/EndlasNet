@model EndlasNet.Data.Work

@{
    ViewData["Title"] = "Delete";
}
<style type="text/css" media="screen">

    .my-custom-img {
        max-width: 60px;
        max-height: 60px;
    }
</style>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Work</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Work type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.EndlasNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.EndlasNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseOrderNum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseOrderNum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class="col-sm-2">
            Process sheet notes
        </dt>
        <dd class="col-sm-10">
            @if (Model.ProcessSheetNotesPdfBytes != null)
            {
                <a title="Download process sheet PDF" asp-action="DownloadProcessPdf" asp-controller="AllWork" asp-route-myvar="@Model.WorkId">
                    <span class="form-inline"><img src="~/img/download.png" class="my-custom-img" /></span>
                </a>
            }
            else
            {
                <a>No process sheet PDF</a>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="WorkId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to list</a>
    </form>
</div>
