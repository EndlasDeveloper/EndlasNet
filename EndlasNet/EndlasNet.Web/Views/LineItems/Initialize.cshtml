@model EndlasNet.Data.LineItem

@{
    ViewData["Title"] = "Initialize";
}

<h1>Initialize</h1>

<h4>Line item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StaticPowderInfoId" class="control-label"></label>
                <select asp-for="StaticPowderInfoId" class="form-control" asp-items="ViewBag.StaticPowderInfoId"></select>
                <span asp-validation-for="StaticPowderInfoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorDescription" class="control-label"></label>
                <input asp-for="VendorDescription" class="form-control" />
                <span asp-validation-for="VendorDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LineItemCost" class="control-label"></label>
                <input asp-for="LineItemCost" class="form-control" />
                <span asp-validation-for="LineItemCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParticleSizeMin" class="control-label">Minimum particle size (&#956;m)</label>
                <input asp-for="ParticleSizeMin" class="form-control" />
                <span asp-validation-for="ParticleSizeMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParticleSizeMax" class="control-label">Maximum particle size (&#956;m)</label>
                <input asp-for="ParticleSizeMax" class="form-control" />
                <span asp-validation-for="ParticleSizeMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumBottles" class="control-label"></label>
                <input asp-for="NumBottles" class="form-control" />
                <span asp-validation-for="NumBottles" class="text-danger"></span>
            </div>
            <input asp-for="PowderOrderId" class="form-control" hidden readonly />
            <input asp-for="LineItemId" class="form-control" hidden readonly />
            <input asp-for="IsInitialized" class="form-control" hidden readonly />
            <div class="form-group">
                <input type="submit" asp-action="Initialize" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    @Html.ActionLink("Back to list", "Index", new { powderOrderId = Model.PowderOrderId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

