@model EndlasNet.Data.LineItem

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Line item</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PowderName" class="control-label"></label>
                <input asp-for="PowderName" class="form-control" />
                <span asp-validation-for="PowderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorDescription" class="control-label"></label>
                <input asp-for="VendorDescription" class="form-control" />
                <span asp-validation-for="VendorDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParticleSize" class="control-label"></label>
                <input asp-for="ParticleSize" class="form-control" />
                <span asp-validation-for="ParticleSize" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumBottles" class="control-label"></label>
                <input asp-for="NumBottles" class="form-control" />
                <span asp-validation-for="NumBottles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PowderOrderId" class="form-control" value="@ViewBag.PowderOrderId" hidden readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

            </div>
        </form>

    </div>
</div>

<div>
    @Html.ActionLink("Back to list", "Index", new { powderOrderId = Model.PowderOrderId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
