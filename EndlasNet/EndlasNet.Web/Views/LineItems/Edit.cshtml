@model EndlasNet.Data.LineItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Line item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LineItemId" />
            <div class="form-group">
                <label asp-for="PowderName" class="control-label"></label>
                <input asp-for="PowderName" class="form-control" />
                <span asp-validation-for="PowderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorDescription" class="control-label"></label>
                <input asp-for="VendorDescription" class="form-control" />
                <span asp-validation-for="VendorDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParticleSize" class="control-label"></label>
                <input asp-for="ParticleSize" class="form-control" />
                <span asp-validation-for="ParticleSize" class="text-danger"></span>
            </div>
         
            <input type="hidden" asp-for="PowderOrderId" class="form-control" asp-items="ViewBag.PowderOrderId"/>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
