@model EndlasNet.Data.LineItem

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>LineItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StaticPowderInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StaticPowderInfo.PowderName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VendorDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VendorDescription)
        </dd>
        <dt class="col-sm-2">
            Particle range (microns)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParticleSizeMin)&nbsp;-&nbsp;@Html.DisplayFor(model => model.ParticleSizeMax)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PowderOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PowderOrder.PurchaseOrderNum)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LineItemId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @Html.ActionLink("Back to list", "Index", new { powderOrderId = Model.PowderOrderId})
    </form>
</div>
