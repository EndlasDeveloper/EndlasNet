@model EndlasNet.Data.PartForWorkOrder

@{
    ViewData["Title"] = "Edit";
    var imageUrl = "NA";
    if (Model.PartForWorkImg != null)
    {
        imageUrl = Model.PartForWorkImg.ImageUrl;
    }
}

<h1>Edit</h1>

<h4>Part for a work order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PartForWorkId" />
            <input type="hidden" asp-for="WorkId" />
            <input type="hidden" asp-for="StaticPartInfoId" />
            <input type="hidden" asp-for="PartForWorkImg.ImageBytes" />
            <div class="form-group">
                <label asp-for="ConditionDescription" class="control-label"></label>
                <input asp-for="ConditionDescription" class="form-control" />
                <span asp-validation-for="ConditionDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InitWeight" class="control-label"></label>
                <input asp-for="InitWeight" class="form-control" />
                <span asp-validation-for="InitWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CladdedWeight" class="control-label"></label>
                <input asp-for="CladdedWeight" class="form-control" />
                <span asp-validation-for="CladdedWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinishedWeight" class="control-label"></label>
                <input asp-for="FinishedWeight" class="form-control" />
                <span asp-validation-for="FinishedWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcessingNotes" class="control-label"></label>
                <input asp-for="ProcessingNotes" class="form-control" />
                <span asp-validation-for="ProcessingNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Suffix" class="control-label"></label>
                <input asp-for="Suffix" class="form-control" />
                <span asp-validation-for="Suffix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartForWorkImgId" class="control-label"></label>
                <select asp-for="PartForWorkImgId" class="form-control" asp-items="ViewBag.PartForWorkImgId"></select>
            </div>
            <div class="form-group">
                <div></div>
                @if (imageUrl != "NA")
                {
                    <span>
                        Current image name:&nbsp; @Html.DisplayFor(model => model.PartForWorkImg.ImageName)
                    </span>
                    <br />
                    <br />
                    <label class="control-label">Current image:&nbsp;</label>
                    <img src="@Html.DisplayFor(model => model.PartForWorkImg.ImageUrl)" alt="Image" style="max-height:50px;max-width:120px" />
                    <br /><br />
                }
                else
                {
                    <span>No image set</span>

                }
            </div>
            <input asp-for="NumParts" class="form-control" hidden readonly />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
