@model EndlasNet.Data.WorkItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Work item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="WorkItemId" />
            <input type="hidden" asp-for="WorkId" />
            <input type="hidden" asp-for="IsInitialized" />
            <input type="hidden" asp-for="WorkItemImageBytes" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StaticPartInfoId" class="control-label"></label>
                <select asp-for="StaticPartInfoId" class="form-control" asp-items="ViewBag.StaticPartInfoId"></select>
                <span asp-validation-for="StaticPartInfoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompleteDate" class="control-label"></label>
                <input asp-for="CompleteDate" class="form-control" />
                <span asp-validation-for="CompleteDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div></div>
                @if (Model.WorkItemImageBytes != null)
                {
                    <label asp-for="WorkItemImageFile" class="control-label">Current image:&nbsp;</label>
                    <img src="@Html.DisplayFor(model => model.WorkItemImageUrl)" alt="Drawing Image" style="max-height:50px;max-width:120px" />
                    <br /><br />
                    <span>
                        Clear image
                        <input asp-for="ClearWorkItemImg" class="form-check-inline" />
                    </span>
                    <br />
                }
                else
                {
                    <label asp-for="WorkItemImageFile" class="control-label"></label>

                }
                <input asp-for="WorkItemImageFile" accept="image/*" />
                <span asp-validation-for="WorkItemImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-action="Edit" asp-route-id="@Model.WorkItemId" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-route-workId="@Model.WorkId">Back to list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

