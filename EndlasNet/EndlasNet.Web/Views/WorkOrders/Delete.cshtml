@model EndlasNet.Data.WorkOrder

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Work order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndlasNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndlasNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class="col-sm-2">
            Process sheet notes
        </dt>
        <dd class="col-sm-10">
            @if (ViewBag.HasProcessSheet != null)
            {
                @Html.ActionLink(
                    linkText: "Download process sheet PDF",
                    actionName: "DownloadProcessPdf",
                    controllerName: "WorkOrders",
                    routeValues: new { id = Model.WorkId },
                    htmlAttributes: null)
            }
            else
            {
                <a>No process sheet PDF</a>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.EndlasEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="WorkId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to list</a>
    </form>
</div>
