        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PoDate)
        </dd>
        <dt class="col-sm-2">
            Bottle number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BottleNumber)
        </dd>
        <dt class="col-sm-2">
            Particle size (um)
        </dt>
        <dd class="col-sm-10">
