@model EndlasNet.Data.Powder

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
@{ 
    var initWeightStr = string.Format("{0:0.0000}", Model.InitWeight);
    var weightStr = string.Format("{0:0.0000}", Model.Weight);
}
<div>
    <h4>Powder</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BottleNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BottleNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InitWeight)
        </dt>
        <dd class="col-sm-10">
            @initWeightStr
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @weightStr
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LotNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LotNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.EndlasEmail)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PowderId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
    @Html.ActionLink("Line item powders", "Index", new { lineItemId = Model.LineItemId }) |
    @Html.ActionLink("All powders", "AllPowderIndex")
</div>
