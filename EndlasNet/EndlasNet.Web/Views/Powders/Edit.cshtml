@model EndlasNet.Data.Powder

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Powder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PowderId" />
            <div class="form-group">
                <label asp-for="PowderName" class="control-label">Powder name</label>
                <input asp-for="PowderName" class="form-control" />
                <span asp-validation-for="PowderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorDescription" class="control-label">Vendor description</label>
                <input asp-for="VendorDescription" class="form-control" />
                <span asp-validation-for="VendorDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PoNumber" class="control-label">PO number</label>
                <input asp-for="PoNumber" class="form-control" />
                <span asp-validation-for="PoNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PoDate" class="control-label">PO date</label>
                <input asp-for="PoDate" class="form-control" />
                <span asp-validation-for="PoDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BottleNumber" class="control-label">Bottle number</label>
                <input asp-for="BottleNumber" class="form-control" />
                <span asp-validation-for="BottleNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParticleSize" class="control-label">Particle size (um)</label>
                <input asp-for="ParticleSize" class="form-control" />
                <span asp-validation-for="ParticleSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InitWeight" class="control-label">Initial weight (lbs)</label>
                <input asp-for="InitWeight" class="form-control" />
                <span asp-validation-for="InitWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Weight (lbs)</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostPerUnitWeight" class="control-label">Cost per lb</label>
                <input asp-for="CostPerUnitWeight" class="form-control" />
                <span asp-validation-for="CostPerUnitWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LotNumber" class="control-label">Lot number</label>
                <input asp-for="LotNumber" class="form-control" />
                <span asp-validation-for="LotNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorId" class="control-label"></label>
                <select asp-for="VendorId" class="form-control" asp-items="ViewBag.VendorId"></select>
                <span asp-validation-for="VendorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to list</a>
</div>

