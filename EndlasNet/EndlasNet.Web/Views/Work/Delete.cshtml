@model EndlasNet.Web.Models.WorkViewModel

@{
    ViewData["Title"] = "Delete";
}
<style type="text/css" media="screen">

    .my-custom-img {
        max-width: 60px;
        max-height: 60px;
    }
</style>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div>
        @await Html.PartialAsync("_DetailsAndDelete", Model)
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="WorkId" />
        <input type="submit" asp-route-workType="@Model.WorkType" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-workType="@Model.WorkType">Back to list</a>
    </form>
</div>
