@model EndlasNet.Data.Work

@{
    ViewData["Title"] = "Create";
    WorkType workType = ViewBag.WorkType;
    string workTypeHeading = "something went wrong";
    if(workType == WorkType.Job)
    {
        workTypeHeading = "Job";
    }
    else if(workType == WorkType.WorkOrder)
    {
        workTypeHeading = "Work order";
    }
}

<h1>Create</h1>

<h4>@workTypeHeading</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-workType="@workType" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @await Html.PartialAsync("_CreateJobWorkOrder", Model)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
