@model EndlasNet.Data.EnvironmentalSnapshot

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Environmental snapshot</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Snapshot date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTimeCollected)
        </dd>
        <dt class = "col-sm-2">
            Temperature
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Temperature)
        </dd>
        <dt class = "col-sm-2">
            Humidity
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Humidity)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EnvSnapshotId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
