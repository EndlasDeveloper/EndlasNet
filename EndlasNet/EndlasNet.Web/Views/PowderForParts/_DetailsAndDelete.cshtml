@model EndlasNet.Data.PowderForPart
@{ 
    var powderWeightUsedStr = string.Format("{0:0.00000}", Model.PowderWeightUsed);
    if (Model.PartForWork.WorkItem.StaticPartInfo != null)
        FileURL.SetImageURL(Model.PartForWork.WorkItem.StaticPartInfo);
    
        
}
<h4>Powder for part</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.PowderBottle)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.PowderBottle.BottleNumber)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.PartForWork.Suffix)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.PartForWork.Suffix)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.PowderWeightUsed)
    </dt>
    <dd class="col-sm-10">
        @powderWeightUsedStr
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.User)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.User.EndlasEmail)
    </dd>
</dl>
    Title:
<em>
    @Html.DisplayFor(model => model.PartForWork.WorkItem.StaticPartInfo.ImageName)
</em>

<div class="col-sm-2">
    @if (Model.PartForWork.WorkItem.StaticPartInfo.DrawingImageBytes != null)
    {
        <img src="@Html.DisplayFor(model => model.PartForWork.WorkItem.StaticPartInfo.ImageUrl)" alt="Drawing Image" />  
    }
    else
    {
        <img src="~/img/no_image.png" style="max-height:400px;max-width:500px" />
    }
</div>
