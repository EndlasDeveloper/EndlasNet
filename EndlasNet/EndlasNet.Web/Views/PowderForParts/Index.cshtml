@model IEnumerable<EndlasNet.Data.PowderForPart>

@{
    ViewData["Title"] = "Powders for parts";
}

<h1>Powders for parts</h1>

<p>
    <a asp-action="Create">Create new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Part drawing image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartForWork.Suffix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Powder)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PowderWeightUsed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src=@Html.DisplayFor(modelItem => item.PartForWork.StaticPartInfo.ImageUrl) alt="Drawing Image" style="max-width:75px;max-height:60px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartForWork.Suffix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Powder.PowderName) &nbsp; - &nbsp;
                @Html.DisplayFor(modelItem => item.Powder.BottleNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PowderWeightUsed)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PowderForPartId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PowderForPartId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PowderForPartId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
