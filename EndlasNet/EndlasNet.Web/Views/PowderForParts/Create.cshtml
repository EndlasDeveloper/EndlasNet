@model EndlasNet.Data.PowderForPart

@{
    ViewData["Title"] = "Create";
    Model.PartForWork.Work.WorkDescription = ViewBag.WorkDescription;
    var workDesc = ViewBag.WorkDescription;
    var partForWorkId = ViewBag.PartForWorkId;
}

<h1>Create</h1>

<h4>PowderForPart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InitEdit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Work</label>
                <input asp-for="PartForWork.Work.WorkDescription" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PartForWorkId" class="control-label"></label>
                <input asp-for="PartForWork.Suffix" class="form-control" asp-items="ViewBag.PartForWorkId" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PowderWeightUsed" class="control-label"></label>
                <input asp-for="PowderWeightUsed" class="form-control" />
                <span asp-validation-for="PowderWeightUsed" class="text-danger"></span>
                @if (ViewBag.HasEnoughPowder == "false")
                {
                    <span class="text-danger">Not enough powder. @ViewBag.PowderLeft lbs left.</span>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
