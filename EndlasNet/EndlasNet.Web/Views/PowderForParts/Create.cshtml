@model EndlasNet.Data.PowderForPart

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Powder for part</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PowderId" class="control-label"></label>
                <select asp-for="PowderId" class="form-control" asp-items="ViewBag.PowderId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PartForWorkId" class="control-label"></label>
                <select asp-for="PartForWorkId" class="form-control" asp-items="ViewBag.PartForWorkId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PowderWeightUsed" class="control-label"></label>
                <input asp-for="PowderWeightUsed" class="form-control" />
                <span asp-validation-for="PowderWeightUsed" class="text-danger"></span>
                @if (ViewBag.HasEnoughPowder == "false")
                {
                    <span class="text-danger">Not enough powder. @ViewBag.PowderLeft lbs left.</span>
                }
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
