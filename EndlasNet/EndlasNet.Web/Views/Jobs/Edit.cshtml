@using EndlasNet.Data;

@model EndlasNet.Data.Job

@{
    ViewData["Title"] = "Edit";
    string completeDateStr;
    if (Model.CompleteDate != null)
        completeDateStr = ((DateTime)Model.CompleteDate).ToString("s");
    else
        completeDateStr = "";
}

<h1>Edit</h1>

<h4>Job</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorkId" />
            <input type="hidden" asp-for="ProcessSheetNotesPdfBytes" />
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <div class="form-group">
                    @Html.DropDownListFor(m => m.Status, new SelectList(Enum.GetValues(typeof(Status)), new { @class = "form-control" }))
                </div>                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <input asp-for="EndlasNumber" value="temp" hidden />
            <div class="form-group">
                <label asp-for="QuoteId" class="control-label"></label>
                <select asp-for="QuoteId" class="form-control" asp-items="ViewBag.QuoteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="WorkDescription" class="control-label"></label>
                <input asp-for="WorkDescription" class="form-control" />
                <span asp-validation-for="WorkDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PurchaseOrderNum" class="control-label"></label>
                <input asp-for="PurchaseOrderNum" class="form-control" />
                <span asp-validation-for="PurchaseOrderNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" asp-format="{0:yyyy-MM-ddTHH:mm}" value="@Model.DueDate.ToString("s")" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompleteDate" class="control-label"></label>
                <input asp-for="CompleteDate" class="form-control" asp-format="{0:yyyy-MM-ddTHH:mm}"  value="@completeDateStr" />
                <span asp-validation-for="CompleteDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.ProcessSheetNotesPdfBytes != null)
                {
                    <label asp-for="ProcessSheetNotesFile" class="control-label">Process sheet notes:&nbsp;</label>

                    @Html.ActionLink(
                        linkText: "Download process sheet notes PDF",
                        actionName: "DownloadProcessPdf",
                        controllerName: "Jobs",
                        routeValues: new { id = Model.WorkId },
                        htmlAttributes: null)
                    <br />
                    <span>
                        Clear process notes file
                        <input asp-for="ClearPdf" class="form-check-inline" />
                    </span>

                }
                else
                {
                    <label asp-for="ProcessSheetNotesFile" class="control-label"></label>

                }                <div></div>

                <input asp-for="ProcessSheetNotesFile" accept="application/pdf" />
                <span asp-validation-for="ProcessSheetNotesFile" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
